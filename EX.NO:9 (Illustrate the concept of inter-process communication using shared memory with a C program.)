#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <sys/ipc.h>
#include <sys/shm.h>
#include <unistd.h>

#define SHM_SIZE 1024  // shared memory size

int main() {
    key_t key = ftok("shmfile", 65);   // generate unique key
    int shmid = shmget(key, SHM_SIZE, 0666 | IPC_CREAT); // create shared memory
    char *shared_mem;

    if (shmid == -1) {
        perror("shmget failed");
        exit(1);
    }

    pid_t pid = fork();  // create child process

    if (pid < 0) {
        perror("fork failed");
        exit(1);
    }

    if (pid == 0) {
        // Child Process (Reader)
        sleep(1); // allow parent to write first
        shared_mem = (char*) shmat(shmid, NULL, 0);
        printf("Child Process: Reading from shared memory...\n");
        printf("Message: %s\n", shared_mem);
        shmdt(shared_mem); // detach memory
    } 
    else {
        // Parent Process (Writer)
        shared_mem = (char*) shmat(shmid, NULL, 0);
        printf("Parent Process: Writing to shared memory...\n");
        char message[] = "Hello from Parent (Shared Memory IPC)";
        strcpy(shared_mem, message);
        shmdt(shared_mem); // detach memory
        wait(NULL); // wait for child to finish

        // Delete shared memory
        shmctl(shmid, IPC_RMID, NULL);
    }

    return 0;
}
